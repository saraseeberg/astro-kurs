---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

interface cuteStuffObject {
	png: string;
	title: string;
	body: string;
}

const cuteStuff: cuteStuffObject[] = [
	{
		png: '../../src/assets/cute_landocar.png',
		title: 'Lando Norris in his car',
		body: 'This is very cute',
	},
	{
		png: 'src/assets/cute_coffetable.png',
		title: 'Cute coffee table',
		body: 'This is a cute coffee table.',
	},
	{
		png: 'src/assets/cute_computer.png',
		title: 'Cute computer',
		body: 'This is a cute computer.',
	},
	{
		png: 'src/assets/cute_cat.png',
		title: 'Cute cat',
		body: 'This is a cute cat.',
	},
	{
		png: 'src/assets/cute_cabin.png',
		title: 'Cute Cabin',
		body: 'This is a cute cabin.',
	},
	{
		png: 'src/assets/cute_mojito.png',
		title: 'Cute mojito',
		body: 'This is a cute mojito.',
	},
];
---

<Layout title="Cute stuff">
	<main>
		<h1>This is stuff Theo thinks is <span class="text-gradient">Cute</span></h1>
		<ul role="list" class="cards-container">
			{cuteStuff.map((cuteObject: cuteStuffObject)=> 
			<Card
				png={cuteObject.png}
				title={cuteObject.title}
				body={cuteObject.body}
			
			/>)}
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	.text-gradient {
		background-color: #5F6F52;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	.cards-container {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		justify-content: center; /* Center cards horizontally */
		list-style: none;
		padding: 0;
	}

	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}

	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}

	.instructions strong {
		color: rgb(var(--accent-light));
	}
</style>

